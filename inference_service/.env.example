# ===========================================
# 推理服务环境变量配置示例
# 复制此文件为 .env 并修改相应的值
# ===========================================

# ===========================================
# gRPC服务配置
# ===========================================
GRPC_HOST=0.0.0.0
GRPC_PORT=50051

# ===========================================
# 模型配置
# ===========================================
MODEL_DIR=./models
DEFAULT_MODEL_VERSION=latest

# ===========================================
# 识别配置
# ===========================================
SIMILARITY_THRESHOLD=0.7
# 最小相似度阈值（0-1之间）

GAP_THRESHOLD=0.1
# Top-1和Top-2之间最小分数差距（0-1之间）

TOP_K=5
# 返回的识别结果数量

# ===========================================
# 数据库配置
# ===========================================
DATABASE_URL=mysql+pymysql://handwriting:handwriting_password@localhost:3306/handwriting_recognition?charset=utf8mb4
# 注意：生产环境请使用强密码

# ===========================================
# Redis配置
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===========================================
# 文件存储配置
# ===========================================
SAMPLES_DIR=./uploads/samples
