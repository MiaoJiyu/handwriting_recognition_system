# ===========================================
# 字迹识别系统环境变量配置示例
# 复制此文件为 .env 并修改相应的值
# ===========================================

# ===========================================
# MySQL数据库配置
# ===========================================
MYSQL_ROOT_PASSWORD=handwriting_password
MYSQL_DATABASE=handwriting_recognition
MYSQL_USER=handwriting
MYSQL_PASSWORD=handwriting_password
MYSQL_PORT=3306

# ===========================================
# Redis配置
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===========================================
# 后端API配置
# ===========================================
BACKEND_PORT=8000

# JWT安全配置（生产环境必须修改！）
SECRET_KEY=your-super-secret-key-change-in-production-32-chars-min
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库连接URL（Docker环境会自动覆盖）
DATABASE_URL=mysql+pymysql://handwriting:handwriting_password@localhost:3306/handwriting_recognition?charset=utf8mb4

# 推理服务配置
INFERENCE_SERVICE_HOST=localhost
INFERENCE_SERVICE_PORT=50051

# 文件存储配置
UPLOAD_DIR=./uploads
SAMPLES_DIR=./uploads/samples
MODELS_DIR=./models

# 文件上传配置
MAX_UPLOAD_SIZE=10485760
# 单位：字节，默认10MB (10 * 1024 * 1024 = 10485760)

# CORS配置（允许的前端地址，逗号分隔）
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# 推理服务配置
# ===========================================
INFERENCE_PORT=50051
GRPC_HOST=0.0.0.0
GRPC_PORT=50051
MODEL_DIR=./models
DEFAULT_MODEL_VERSION=latest

# 识别参数
SIMILARITY_THRESHOLD=0.7
GAP_THRESHOLD=0.1
TOP_K=5

# ===========================================
# 前端配置
# ===========================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000

# ===========================================
# Nginx配置（生产环境）
# ===========================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# 其他配置
# ===========================================
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 开发模式（启用热重载等功能）
DEBUG=false
